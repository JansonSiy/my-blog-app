<p id="notice"><%= notice %></p>

<img src="<%= @post.image_url %>" class="img_banner" alt="image_url">

<h1><%= @post.title %></h1>

<p class="author">By: <%= @post.author %></p>

<div class="content"><%= @post.content %></div>

<div class="action_show"><%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Back', posts_path %></div>